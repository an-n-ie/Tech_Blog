
<div id="profile-welcome-bar" class="row">
  <div class="col-auto">
   <h2>Welcome, {{name}}! </h2>
  </div>
</div>

<div class="row mt-4">
  <div class="blog-background col-md-6">
    <h3>Rate & write about the latest tech:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">title:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="blog-funding">rating:</label>
        <input class="form-input" type="number" min="0" max="5" id="blog-funding" name="blog-funding" />
      </div>
      <div class="form-group">
        <label for="blog-desc">post:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">submit</button>
      </div>
    </form>
  </div>

  {{#if blogs.length}}
  <div class="col-md-6 blog-list current-reviews-background">
    <h3>Current posts:</h3>

    {{#each blogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="./js/profile.js"></script>
